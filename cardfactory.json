              },
              "text/xml": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                  }
                }
              }
            }
          }
        }
      }
    }
