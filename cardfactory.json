  "paths": {
    "/api/v1.0/users/{appuserid}/cards/issued": {
      "get": {
        "tags": [
          "CardAdapter"
        ],
        "summary": "Gets all cards by holder.",
        "parameters": [
          {
            "name": "appuserid",
            "in": "path",
            "description": "Holder reference given by a third-party.",
            "required": true,
            "schema": {
              "type": "string",
              "description": "Holder reference given by a third-party.",
              "nullable": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                  }
                }
              },
              "text/xml": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1.0/users/{appuserid}/cards/issued/{appcardid}": {
      "get": {
        "tags": [
          "CardAdapter"
        ],
        "summary": "Gets card details.\r\nNo Need to bind the Holder, the card is unique for a partner/externalref",
        "parameters": [
          {
            "name": "appuserid",
            "in": "path",
            "description": "User reference given by a third-party.",
            "required": true,
            "schema": {
              "type": "string",
              "description": "User reference given by a third-party.",
              "nullable": true
            }
          },
          {
            "name": "appcardid",
            "in": "path",
            "description": "Card reference given by a third-party.",
            "required": true,
            "schema": {
              "type": "string",
              "description": "Card reference given by a third-party.",
              "nullable": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                }
              },
              "text/xml": {
                "schema": {
                  "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1.0/cards/issued": {
      "get": {
        "tags": [
          "CardAdapter"
        ],
        "summary": "Gets all cards.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CardFactory.Application.Adapter.Card.BankCardDto"
